<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<h4 style="font-size: 25px;">New Package</h4>
		<br>
		<%= simple_form_for @package do |f| %>
		  <%= f.error_notification %>

		  <div class="form-inputs">
		    <%= f.input :user_id, :as => :hidden, :input_html => { :value => params[:user_id] } %>
		    <%= f.input :name, required: true, autofocus: true %>
		    <%= f.input :price, required: true %>
		    <%= f.input :count, :input_html => { :value => 10 }, required: true %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Add Package" %>
		  </div>
	  </div>
	<% end %>
</div>
