<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<h4 style="font-size: 25px;">Edit</h4>
		<br>
		<%= simple_form_for @package do |f| %>
		  <%= f.error_notification %>
		  <div class="form-inputs signature_form">
		    <%= f.input :user_id, :as => :hidden, :input_html => { :value => @package.user_id } %>
		    <%= f.input :name, required: true, autofocus: true %>
		    <%= f.input :price, required: true %>
		    <%= f.input :count, required: true %>
				<%= f.simple_fields_for :package_histories do |h| %>
					<%= h.signature_field :signature %>
	      <% end %>
		  </div>

		  <div class="form-actions">
				<button id="clear_button" class="btn btn-warning">Clear</button>
		    <%= f.button :submit, "Update" %>
				<%= link_to "Back", :back, class: "btn btn-info" %>
		  </div>
		<% end %>
	 </div>
</div>

<script type="text/javascript">
var canvas = document.getElementById("JohnHancock-canvas");
var clear_button = document.getElementById("clear_button");
var signature_pad = canvas.getContext("2d");
clear_button.onclick = function clear(){
	signature_pad.clearRect(0, 0, canvas.width, canvas.height);
	return false;
}
</script>

<style>
	#JohnHancock-canvas {
		background-color: white;
		border: 1px solid black;
		width: 100%;
		max-height: 150px;
	}
</style>
