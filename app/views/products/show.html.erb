		<div id="page-header" style="margin-bottom: 40px">
			<div class="container">
				<h1>PRODUCTS</h1>
				<ul class="breadcrumbs">
					<li><a href="/home">Home</a></li>
					<li><a href="/products">Products</a></li>
				</ul>
			</div>
		</div>
		<div class="container">
			<div id="page-content">
				<div class="various-content">
					<div class="row" id="product_show">
					    <div class="col-md-8 col-md-offset-2">
					        <div class="panel panel-default">
						        <div class="panel-heading product_image">
						  			<%= image_tag @product.image.url %>
						  	    </div>
						  	    <div class="panel-body">
							  		<h3><%= @product.name %></h3>
							  		<p><%= @product.description %></p>
							  	</div>
						  		<div class="panel-footer">
						        <% if user_signed_in? %>
							  		<p>Created by <%= @product.user.email %></p>
							  		<%= link_to "Edit", edit_product_path, class: "btn btn-warning" %>
							  		<%= link_to "Delete", product_path, method: :delete, data: {confirm: "Are you sure to delete this product?"}, class: "btn btn-danger" %>
								    <%= link_to "Back", :back, class: "btn btn-info" %>
							  	<% end %>
							  	</div>
					  		</div>
					    </div>
					</div>
				</div>
			</div>
		</div>
	</div>